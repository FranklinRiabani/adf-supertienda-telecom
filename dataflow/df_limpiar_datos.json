{
	"name": "df_limpiar_datos",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "datos_sucios_csv",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_datos_sucios_tb",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "reemplazarValores"
				},
				{
					"name": "datosNulos"
				},
				{
					"name": "espaciosVacios"
				},
				{
					"name": "caracteresOcultos"
				},
				{
					"name": "aggregate1"
				},
				{
					"name": "cast1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ID as string,",
				"          Nombre as string,",
				"          Edad as string,",
				"          Email as string,",
				"          ciudad as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 derive(Email = replace(Email, \"#\", \"@\")) ~> reemplazarValores",
				"reemplazarValores derive(Edad = iifNull(Edad, \"0\", Edad),",
				"          ciudad = iifNull(ciudad, \"n/a\", ciudad)) ~> datosNulos",
				"datosNulos derive(Nombre = trim(Nombre)) ~> espaciosVacios",
				"espaciosVacios derive(Nombre = replace(replace(replace(Nombre, \"\\\\t\", \"\"),\"\\\\r\",\"\"),\"\\\\n\",\"\")) ~> caracteresOcultos",
				"caracteresOcultos aggregate(groupBy(ID),",
				"     each(match(name!=\"ID\"), $$ = first($$))) ~> aggregate1",
				"aggregate1 cast(output(",
				"          ID as integer,",
				"          Edad as integer",
				"     ),",
				"     errors: true) ~> cast1",
				"cast1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          ID as integer,",
				"          Nombre as string,",
				"          Email as string,",
				"          Edad as integer,",
				"          Ciudad as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          ID,",
				"          Nombre,",
				"          Email,",
				"          Edad,",
				"          Ciudad = ciudad",
				"     )) ~> sink1"
			]
		}
	}
}